<h1 class="title">Writ-<br>ing.</h1>

<ol class="articles">
  {% for item in articles %}
   <li class="articles__article" style="--animation-order:{{ loop.index }}">
      <a class="articles__link" href="{{ item.href }}" target="_blank" rel="noopener noreferrer">
        <div class="articles__content articles__content--lhs">
          <h2 class="articles__title">{{ item.title }}</h2>
          <div class="articles__footer">
            <p>{{ item.platform }}</p>
            <time datetime="{{ item.date }}">{{ item.dateHuman }}</time>
          </div>
        </div>
        <div class="articles__content articles__content--rhs" aria-hidden="true">
          <h2 class="articles__title">{{ item.title }}</h2>
          <div class="articles__footer">
            <p>{{ item.platform }}</p>
            <time datetime="{{ item.date }}">{{ item.dateHuman }}</time>
          </div>
        </div>
      </a>
    </li>
  {% endfor %}
</ol>
