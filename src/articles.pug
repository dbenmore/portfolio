html(lang="en")
  head
    include includes/head.pug
  body
    main
      p.who-am-i !{whoAmI}
      
      div.page-animate-in
        a(href="index.pug").home-link
          <svg viewBox="0 0 24 24" class="home-link__icon"><path d="M12.707 18.293l-5.293-5.293h11.586c0.552 0 1-0.448 1-1s-0.448-1-1-1h-11.586l5.293-5.293c0.391-0.391 0.391-1.024 0-1.414s-1.024-0.391-1.414 0l-7 7c-0.096 0.096-0.168 0.206-0.217 0.324-0.051 0.122-0.076 0.253-0.076 0.383 0 0.256 0.098 0.512 0.293 0.707l7 7c0.391 0.391 1.024 0.391 1.414 0s0.391-1.024 0-1.414z"></path></svg>
          | Home

        h1.page-title Articles
        
        ol.articles
          - var i = 1;
          each article in articles
            li.articles__article(style="--animation-order:" + i)
              a.articles__link(unless href=article.url target=article.comingSoon ? "" : "_blank" rel="noopener noreferrer")
                div.articles__content.articles__content--lhs
                  h2.articles__title !{article.title}
                  div.articles__footer
                    p=article.website
                    time(datetime=article.dateTime)=article.date

                div.articles__content.articles__content--rhs(aria-hidden="true")
                  h2.articles__title !{article.title}
                  div.articles__footer
                    p=article.website
                    time(datetime=article.dateTime)=article.date
            - i++;
